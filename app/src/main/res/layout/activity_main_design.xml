<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


   <FrameLayout
       android:id="@+id/fragment_content"
       android:layout_above="@+id/line1"
       android:layout_width="match_parent"
       android:layout_height="match_parent"></FrameLayout>
    <View
        android:background="@color/colorPrimary"
        android:layout_above="@+id/buttomLinearLayout"
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:id="@+id/buttomLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="455dp">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/layout_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/home_png"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_png"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="第一个"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/layout_counter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/counter_png"

                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="2dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/counter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/counter_png"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="计热器"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/layout_shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3">

            <TextView
                android:id="@+id/shop_png"

                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="2dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/shop_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/shop_png"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="超市"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>
</RelativeLayout>
